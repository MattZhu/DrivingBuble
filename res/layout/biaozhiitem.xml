<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/category_title"
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:background="@drawable/subtitle_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="交通标志图解"
        android:textColor="#333333"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="18dp"
         >

        <ImageView
            android:id="@+id/sub_image"
            android:layout_width="80dp"
            android:layout_height="60dp"    
            android:src="@drawable/jtbz_sub_img" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/sub_image"
            android:text="交通标志图解"
            android:textColor="#333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/sub_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/sub_title"
            android:layout_below="@id/sub_title"
            android:layout_marginTop="3dp"
            android:text="必考内容 需要牢记"
            android:textColor="#666666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/sub_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/sub_desc"
            android:layout_below="@id/sub_desc"
            android:layout_marginTop="5dp"
            android:text="共24张"
            android:textColor="#DC0000"
            android:textSize="12dp" />
    </RelativeLayout>

</LinearLayout>