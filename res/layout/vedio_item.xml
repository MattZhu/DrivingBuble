<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/vedioImgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/vedioImg"
            android:layout_width="70dp"
            android:layout_height="53dp"
            android:src="@drawable/vedio_image_default" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true" 
            android:src="@drawable/play_btn" 
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/vedioImgv"
        android:text="Title"
        android:textColor="#555555"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/viconright"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/vedioImgv"
        android:layout_alignParentRight="true"
        android:src="@drawable/vicon" />

    <TextView
        android:id="@+id/descTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTxt"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/viconright"
        android:layout_toRightOf="@id/vedioImgv"
        android:text="desc"
        android:textColor="#666666"
        android:textSize="14sp" />

</RelativeLayout>