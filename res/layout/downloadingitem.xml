<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginTop="2dp"
    >
    <ImageView 
        android:id="@+id/imageV"
         android:layout_width="60dp"
    	android:layout_height="60dp"
    	android:src="@drawable/video_player"
        />
	<TextView 
	    android:id="@+id/dltitle"
	    android:layout_width="match_parent"	    
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/imageV"
	    android:layout_marginLeft="5dp"
	    android:textColor="#555555"
        android:textSize="18sp"
	    android:text="Title"
	    />	
	<TextView
	    android:id="@+id/downsize"
	     android:layout_below="@id/dltitle"
	     android:layout_toRightOf="@id/imageV"
	      android:layout_marginLeft="5dp"
	    android:layout_width="wrap_content"	    
	    android:layout_height="wrap_content"
	    ></TextView>
	<ProgressBar 
	    android:id="@+id/progress"
	    android:layout_below="@id/downsize"
	     android:layout_alignLeft="@id/downsize"
	     style="?android:attr/progressBarStyleHorizontal"
	    android:layout_height="12dp"
	    
	    android:layout_width="match_parent"
	    />
</RelativeLayout>